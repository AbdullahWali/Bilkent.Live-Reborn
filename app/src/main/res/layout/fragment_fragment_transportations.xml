<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.figalitaho.bilkentlive.FragmentTransportations">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:src="@drawable/ic_transportations"
            android:id="@+id/transportationsImage"
            android:layout_marginTop="107dp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="384dp"
            android:layout_height="160dp"
            android:id="@+id/lineTransportations"
            android:src="@drawable/linebottom"
            android:layout_centerInParent="true" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:id="@+id/fontTransportations"
            android:layout_below="@+id/lineTransportations"
            android:layout_marginTop="5dp"
            android:src="@drawable/fontstransportations"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
