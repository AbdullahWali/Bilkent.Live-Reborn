<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.figalitaho.bilkentlive.FragmentTransportations">


        <ImageView
            android:layout_width="137dp"
            android:layout_height="137dp"
            android:src="@drawable/ic_transportations"
            android:id="@+id/transportationsImage"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />



        <ImageView
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:id="@+id/fontTransportations"

            android:src="@drawable/fontstransportations"
            android:layout_below="@+id/transportationsImage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

</RelativeLayout>
